{
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,

		"target": "esnext",
		"module": "esnext",
		"declaration": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,

		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"lib": ["esnext", "dom"],
		"types": ["node"],

		"paths": {
			"@prismicio/react/config": ["./src/rsc/__defaultConfig__.ts"]
		}
	},
	"exclude": ["node_modules", "dist", "examples"]
}
