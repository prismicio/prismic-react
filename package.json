{
	"name": "@prismicio/react",
	"version": "2.0.0",
	"description": "React components and hooks to fetch and present Prismic content",
	"keywords": [
		"typescript",
		"prismic",
		"react",
		"cms",
		"hook"
	],
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/prismicio/prismic-react.git"
	},
	"license": "Apache-2.0",
	"author": "Prismic <contact@prismic.io> (https://prismic.io)",
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "siroc build",
		"dev": "siroc build --watch",
		"format": "prettier --write .",
		"lint": "eslint --ext .js,.ts .",
		"prepare": "npm run build",
		"release": "npm run build && npm run test && standard-version && git push --follow-tags && npm run build && npm publish",
		"release:beta": "npm run build && npm run test && standard-version --release-as major --prerelease beta && git push --follow-tags && npm run build && npm publish --tag beta",
		"release:beta:dry": "standard-version --release-as major --prerelease beta --dry-run",
		"release:dry": "standard-version --dry-run",
		"test": "npm run lint && npm run unit",
		"unit": "nyc --reporter=lcovonly --reporter=text --exclude-after-remap=false ava"
	},
	"dependencies": {
		"@prismicio/helpers": "^2.0.0-beta.6",
		"@prismicio/richtext": "^2.0.0-beta.4"
	},
	"devDependencies": {
		"@prismicio/client": "^6.0.0-beta.4",
		"@prismicio/mock": "^0.0.6",
		"@prismicio/types": "^0.1.19",
		"@testing-library/react": "^12.1.2",
		"@testing-library/react-hooks": "^7.0.2",
		"@types/jsdom": "^16.2.13",
		"@types/node-fetch": "^3.0.3",
		"@types/react": "^17.0.37",
		"@types/react-test-renderer": "^17.0.1",
		"@types/sinon": "^10.0.6",
		"@typescript-eslint/eslint-plugin": "^5.7.0",
		"@typescript-eslint/parser": "^5.7.0",
		"ava": "^3.15.0",
		"browser-env": "^3.3.0",
		"eslint": "^8.4.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.27.1",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-plugin-tsdoc": "^0.2.14",
		"global-jsdom": "^8.4.0",
		"jsdom": "^19.0.0",
		"msw": "^0.36.3",
		"node-fetch": "^3.1.0",
		"nyc": "^15.1.0",
		"prettier": "^2.5.1",
		"prettier-plugin-jsdoc": "^0.3.30",
		"react": "^17.0.2",
		"react-test-renderer": "^17.0.2",
		"sinon": "^12.0.1",
		"siroc": "^0.16.0",
		"standard-version": "^9.3.2",
		"ts-eager": "^2.0.2",
		"typescript": "^4.5.4"
	},
	"peerDependencies": {
		"@prismicio/client": "^6.0.0-beta.3",
		"react": "^16.8 || ^17"
	},
	"peerDependenciesMeta": {
		"@prismicio/client": {
			"optional": true
		}
	},
	"engines": {
		"node": ">=12.7.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
